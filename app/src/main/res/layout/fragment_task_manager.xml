<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nombre de la tarea -->
    <TextView
        android:id="@+id/textViewTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Nombre de la Tarea"
        android:textSize="24sp" />

    <!-- Descripción de la tarea -->
    <TextView
        android:id="@+id/textViewTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTaskName"
        android:layout_marginBottom="8dp"
        android:hint="Descripción de la Tarea"
        android:textSize="19sp" />

    <!-- Fecha de vencimiento -->
    <TextView
        android:id="@+id/textViewTaskDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTaskDescription"
        android:layout_marginBottom="8dp"
        android:hint="Fecha de Vencimiento: DD/MM/AAAA"
        android:textSize="19sp" />

    <!-- Prioridad -->
    <TextView
        android:id="@+id/textViewTaskPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTaskDueDate"
        android:textSize="19sp"
        android:hint="Prioridad: Alta" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonEditTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Editar"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/buttonDeleteTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Eliminar"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
